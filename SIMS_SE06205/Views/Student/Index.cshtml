@model SIMS_SE06206.Models.StudentModel
@{
    ViewData["title"] = "Student managment";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="row">
  <div class="col col-sm-12 col-md-12 p-3">
    <h3>Lists Student</h3>
        <a class="btn btn-primary btn-sm my-2" href="@Url.Action("Add","Student")"> Add Student </a>
    <table class="my-3 table table-bordered table-hover table-striped">
      <thead class="table-dark">
        <th>ID</th>
        <th>Code</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Address</th>
        <th>Gender</th>
        <th>Birthday</th>
        <th colspan="2">Action </th>
      </thead>
      <tbody>
        @foreach (var item in Model.StudentsList)
        {
        <tr>
          <td>@item.Id</td>
          <td>@item.code</td>
          <td>@item.firstName</td>
          <td>@item.lastName</td>
          <td>@item.email</td>
          <td>@item.phone</td>
          <td>@item.address</td>
          <td>@item.gender</td>
          <td>@item.birthday</td>
                        <td>
                            <a class="btn btn-info btn-sm" href="@Url.Action("Update","Student", new { id = @item.Id })">Edit</a>
                        </td>
                        <td>
                            <a class="btn btn-danger btn-sm" href="@Url.Action("Delete","Student", new { id = @item.Id })">Delete</a>
                        </td>
        </tr>
        }
      </tbody>
    </table>
  </div>
</div>
